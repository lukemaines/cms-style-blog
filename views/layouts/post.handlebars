<h2>{{post.title}}</h2>
<p>By {{post.user.username}} on {{post.createdAt}}</p>
<p>{{post.content}}</p>

<h3>Comments</h3>
{{#each post.comments}}
  <div class="comment">
    <p>By {{this.user.username}} on {{this.createdAt}}</p>
    <p>{{this.comment_text}}</p>
  </div>
{{else}}
  <p>No comments yet.</p>
{{/each}}

{{#if logged_in}}
  <form id="comment-form">
    <textarea id="comment-text" placeholder="Add a comment"></textarea>
    <button type="submit">Submit Comment</button>
  </form>
  <script src="/js/comment.js"></script>
{{else}}
  <p><a href="/login">Log in</a> to add a comment.</p>
{{/if}}
