<h2>Welcome, {{username}}!</h2>

<h3>Your Posts</h3>

{{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>Posted on {{this.createdAt}}</p>
    <a href="/post/edit/{{this.id}}">Edit Post</a>
    <div class="delete-post" data-id="{{this.id}}">
      <button type="button" class="delete-post-btn">Delete Post</button>
  </div>
{{else}}
  <p>You haven't created any posts yet.</p>
{{/each}}

<a href="/post/new">Create New Post</a>
